<ul class="mobile-tasks__list">
	<div class="message">
		<template id="emptyTaskTemplate" style="display: none">
			<span class="message__tasks-empty">Активных задач нет</span>
		</template>
	</div>
	<template id="mobileTasks">
		<li class="mobile-tasks__item">
			<ul class="mobile-task__list">
				<li class="mobile-task__item _name">
					<div class="mobile-task-name">
						<h1 class="mobile-task__text _name">{{Name}}</h1>
					</div>
					<div class="mobile-task-arrow">
						<img class="mobile-task__icon" src="../assets/icons/arrow-right.svg" />
					</div>
				</li>
				<li class="mobile-task__item _status">
					<div class="mobile-task-status">
						<p class="mobile-task__header">Статус</p>
						<p class="mobile-task__text _status"></p>
					</div>
					<div class="mobile-task-badge">

					</div>
					<p class="mobile-task__text _status">{{Status}}</p>
				</li>
				<li class="mobile-task__item _date">
					<p class="mobile-task__text _date">{{Date}}</p>
				</li>
				<li class="mobile-task__item _time">
					<p class="mobile-task__text _time">{{Time}}</p>
				</li>
				<li class="mobile-task__item _author">
					<p class="mobile-task__text _author">{{Author}}</p>
				</li>
				<li class="mobile-task__item _more">
					<h1 class="mobile-task__text _more">Еще...</h1>
				</li>
			</ul>
		</li>
	</template>
</ul>